                            <img src="<%= link %>/<%= element.bulletinLogo.image %>" width="25px" class="me-4" />
                            <%= item %>
                          </li>
                          <% }); %>
                      </ul>
                    </div>
                    <% } else { %>
                      <!-- If items is not a list -->
                      <a href="<%= items.link %>" class="pb-4">
                        <h3 class="text-primary fw-bold mb-1 mt-2 underline-alt ls-1">
                          <%= items.heading %> <i class="ml-2 fa fa-arrow-right-long"></i>
                        </h3>
                      </a>
                      <% } %>
                        <% }); %>

            </div>
            <div class="col-md-4 px-4">

              <% const imgSet2=imageSet.slice(2,4); %>
                <% imgSet2.forEach((items)=> { %>
                  <img src="<%= link %>/<%= items.image %>" alt="About Us Image" class="img-fluid rounded mb-4"
                    data-aos="fade-right" data-aos-delay="200" />
                  <% }); %>
            </div>
          </div>
        </div>
      </section>

