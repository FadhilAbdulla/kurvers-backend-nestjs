<!DOCTYPE html>
<html lang="en">
<%- include('partials/head.ejs') %>

  <body>
    <%- include('partials/header.ejs', { header: "career" }) %>

      <section style="padding-bottom: 0%">
        <div class="row text-overlay justify-content-center" style="
          background-image: url('<%= link %>/uploads/assets/NewSet/Turnkey2.png');
          background-size: cover;
        " data-aos="fade-in" data-aos-delay="200">
          <div class="col-md-8 py-5" data-aos="fade-left" data-aos-delay="300">
            <a href="<%= link %>/career">
              <i class="fas fa-arrow-left"></i> Back to job listing
            </a>
            <h5 class="heading" id="job-title" style="color: white !important" data-aos="fade-up" data-aos-delay="300">
              <%= title %>
            </h5>
            <div class="job-details text-white" id="job-location-type" data-aos="fade-up" data-aos-delay="300">
              <i class="fas fa-map-marker-alt"></i>
              <%= location %>
                <i class="ms-4 fas fa-clock"></i>
                <%= type %>
                  <!-- Location and Type will be inserted here -->
            </div>
          </div>
        </div>
      </section>
      <section class="job-tiles" style="padding-top: 40px">
        <div class="container">
          <div class="row justify-content-center" data-aos="fade-in" data-aos-delay="600">
            <div class="col-md-9 text-primary job-description" id="job-description" data-aos="fade-left"
              data-aos-delay="600">
              <%= description %>
            </div>
          </div>
          <div class="row justify-content-center g-4 mt-1">
            <div class="col-md-9" data-aos="fade-left" data-aos-delay="600">
              <h5 class="font-style-secondary fs-4 mb-3 fw-bold">
                Responsibilities:
              </h5>
              <ul id="job-responsibilities" class="job-responsibilities">
                <% responsibilities.forEach(item=> {%>
                  <li>
                    <%= item %>
                  </li>
                  <% }); %>
              </ul>
              <h5 class="font-style-secondary fs-4 mb-3 fw-bold">
                Key Requirements:
              </h5>
              <ul id="job-requirements" class="job-requirements">
                <% requirements.forEach(item=> {%>
                  <li>
                    <%= item %>
                  </li>
                  <% }); %>
              </ul>
              <a id="applyButton" href="<%= link %>/career-apply/<%= id %>"
                class="btn btn-secondary font-style-primary fs-6 fw-bold bg-secondary border rounded px-4 py-3 mt-4">APPLY
                FOR THE POSITION</a>
            </div>
          </div>
        </div>
      </section>

      <%- include('partials/footer') %>

        <!-- <div id="preloader"></div> -->

        <!-- Vendor JS Files -->
        <script src="<%= link %>/uploads/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="<%= link %>/uploads/assets/vendor/aos/aos.js"></script>
        <script src="<%= link %>/uploads/assets/vendor/glightbox/js/glightbox.min.js"></script>
        <script src="<%= link %>/uploads/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
        <script src="<%= link %>/uploads/assets/vendor/swiper/swiper-bundle.min.js"></script>
        <script src="<%= link %>/uploads/assets/vendor/purecounter/purecounter_vanilla.js"></script>
        <script src="<%= link %>/uploads/assets/vendor/php-email-form/validate.js"></script>

        <!-- Template Main JS File -->
        <script src="<%= link %>/uploads/assets/js/main.js"></script>
  </body>

</html>