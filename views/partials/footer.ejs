<footer class="bg-primary text-light py-2">
  <div class="container">
    <div class="row g-4 pt-4">
      <div class="col-md-6">
        <img src="<%= link %>/uploads/assets/img/logo-name.png" alt="Kürvers Piping" class="img-fluid" width="18%" />
        <p class="mt-2 pe-4 me-4 text-sm-85">
          <%= footer.cmpny.Description %>
        </p>
        <div>
          <% footer.accreditationLogo.forEach((item)=> { %>
            <img src="<%= link %>/<%= item.image %>" alt="Kürvers Piping" class="img-fluid me-2" width="13%" />
            <% }) %>
        </div>
        <!-- accreditationLogo -->
      </div>
      <div class="col-md-3">
        <ul class="list-unstyled text-sm-95">
          <li><a class="fw-light" href="<%= link %>">&raquo; Home</a></li>
          <li>
            <a class="mt-1 fw-light" href="<%= link %>/about">&raquo; About Us</a>
          </li>
          <li>
            <a class="mt-1 fw-light" href="<%= link %>/turnkey">&raquo; Turnkey Solutions</a>
          </li>
          <li>
            <a class="mt-1 fw-light" href="<%= link %>/product">&raquo; Product Range</a>
          </li>
          <li>
            <a class="mt-1 fw-light" href="<%= link %>/career">&raquo; Careers</a>
          </li>
          <li>
            <a class="mt-1 fw-light" href="<%= link %>/contact">&raquo; Contact</a>
          </li>
          <li>
            <a class="mt-1 fw-light" href="<%= link %>/terms">&raquo; Terms & Conditions</a>
          </li>
          <li>
            <a class="mt-1 fw-light" href="<%= link %>/privacy">&raquo; Privacy Policy</a>
          </li>
        </ul>
      </div>
      <div class="col-md-3">
        <ul class="list-unstyled text-sm-85">
          <li class="fw-light">
            <span class="fw-bold">Central Tel. No.:</span><a href="tel:+<%= footer.cmpny.Tel %>">
              <%= footer.cmpny.Tel %>
            </a>
          </li>
          <li class="fw-light">
            <span class="fw-bold">Central Fax No.:</span> <a href="fax:+<%= footer.cmpny.Fax %>">
              <%= footer.cmpny.Fax %>
            </a>
          </li>
          <li class="fw-light"><span class="fw-bold">Mail:</span><a href="mailto:<%= footer.cmpny.Mail %>">
              <%= footer.cmpny.Mail %>
            </a></li>

        </ul>
        <address class="fw-semibold text-sm-85">
          <%= footer.cmpny.Name %><br />
            <%= footer.cmpny.Street %><br />
              <%= footer.cmpny.City %><br />
                <%= footer.cmpny.Country %>
        </address>
      </div>
    </div>
    <hr style="border: none; height: 2px; background-color: white" />
    <div class="row text-sm-85">
      <div class="col-md-6 text-start">
        <p>
          <%= footer.cmpny.Copyright %>
        </p>
      </div>
      <div class="col-md-6 d-flex justify-content-center justify-content-md-end align-items-start">
        <div class="d-flex align-items-center">
          <span class="me-2">Follow us on social media:</span>
          <!-- <a
              href="#"
