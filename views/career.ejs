    <section style="padding-bottom: 0%">
      <div
        class="text-center py-5 text-overlay"
        style="
          background-image: url('<%= link %>/uploads/assets/NewSet/Turnkey2.png');
          background-size: cover;
        "
        data-aos="fade-in"
        data-aos-delay="200"
      >
        <h1
          class="heading"
          style="color: white !important"
          data-aos="fade-down"
          data-aos-delay="400"
        >
          Careers at Kürvers
        </h1>
      </div>
    </section>
    <section class="job-tiles" style="padding-top: 40px">
      <div class="container">
        <div
          class="text-center text-primary"
          data-aos="fade-in"
          data-aos-delay="600"
        >
          <h2 class="mb-3">Worldwide opportunities</h2>
          <p class="mb-1">
            Kürvers Piping and its international network offers various job
            opportunities.
          </p>
          <p>
            If you want to join our Team, please send your application to
            <a class="text-secondary" href="mailto:<%= career_apply_mail %>"
              ><%= career_apply_mail %></a 
            >
          </p>
        </div>
        <!-- <div id="job-list" class="row justify-content-center g-4 mt-4"></div> -->
        <% career.forEach(item => { %>
          <div class="row justify-content-center g-4 mt-4">
            <div
              class="col-md-11 bg-light"
              data-aos="fade-right"
              data-aos-delay="600"
            >
              <div class="p-4 px-4">
                <div class="card-body">
                  <h5 class="card-title mb-2 ls-1 fw-bold"><%= item.title %></h5>
                  <p class="card-text">
                    <%= item.description %>
                  </p>
                  <div class="d-flex justify-content-between mt-4">
                    <div class="job-details">
                      <i class="fas fa-map-marker-alt"></i> <%= item.location %>
                      <i class="ms-4 fas fa-clock"></i> <%= item.type %>
                    </div>
                    <a
                      href="<%= link + '/career-focus/' +  item.id %>"
                      class="btn btn-secondary fs-6 fw-bold bg-secondary border rounded px-4 py-2"
                      >View Job</a
                    >
                  </div>
                </div>
              </div>
            </div>
          </div> 
        <% }); %>

      </div>
    </section>

    <%- include('partials/footer') %>

    <div id="preloader"></div>

    <script>
      fetch("<%= link %>/uploads/assets/Data/career.json")
        .then((response) => response.json())
        .then((data) => {
          const jobList = document.getElementById("job-list");
          data.forEach((job) => {
            const jobCard = document.createElement("div");
            jobCard.classList.add("col-md-11", "bg-light");
            jobCard.setAttribute("data-aos", "fade-right");
            jobCard.setAttribute("data-aos-delay", "200");
            jobCard.innerHTML = `
              <div class="p-4 px-4">
                <div class="card-body">
                  <h5 class="card-title mb-2 ls-1 fw-bold">${job.title}</h5>
                  <p class="card-text">${job.description}</p>
                  <div class="d-flex justify-content-between mt-4">
                    <div class="job-details">
                      <i class="fas fa-map-marker-alt"></i> ${job.location}
                      <i class="ms-4 fas fa-clock"></i> ${job.type}
                    </div>
                    <a href="<%= link %>/career-focus?job=${job.id}" 
                       class="btn btn-secondary fs-6 fw-bold bg-secondary border rounded px-4 py-2">
                      View Job
                    </a>
                  </div>
                </div>
              </div>`;
            jobList.appendChild(jobCard);
          });
        })
        .catch((error) => console.error("Error fetching jobs:", error));
    </script>

    <!-- Vendor JS Files -->
    <script src="<%= link %>/uploads/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="<%= link %>/uploads/assets/vendor/aos/aos.js"></script>
    <script src="<%= link %>/uploads/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="<%= link %>/uploads/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="<%= link %>/uploads/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="<%= link %>/uploads/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="<%= link %>/uploads/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="<%= link %>/uploads/assets/js/main.js"></script>
  </body>
</html>
