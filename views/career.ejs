<!DOCTYPE html>
<html lang="en">
<%- include('partials/head.ejs') %>

  <body>
    <%- include('partials/header.ejs', { header: "career" }) %>

      <section style="padding-bottom: 0%">
        <div class="text-center py-5 text-overlay" style="
          background-image: url('<%= link %>/uploads/assets/NewSet/Turnkey2.png');
          background-size: cover;
        " data-aos="fade-in" data-aos-delay="200">
          <h1 class="heading" style="color: white !important" data-aos="fade-down" data-aos-delay="400">
            Careers at KÃ¼rvers
          </h1>
        </div>
      </section>
      <section class="job-tiles" style="padding-top: 40px">
        <div class="container">
          <div class="text-center text-primary" data-aos="fade-in" data-aos-delay="600">
            <h2 class="mb-3">Worldwide opportunities</h2>
            <p class="mb-1">
              <%- subHeading %>
            </p>
          </div>
          <!-- <div id="job-list" class="row justify-content-center g-4 mt-4"></div> -->
          <% career.forEach(item=> { %>
            <div class="row justify-content-center g-4 mt-4">
              <div class="col-md-11 bg-light" data-aos="fade-right" data-aos-delay="600">
                <div class="p-4 px-4">
                  <div class="card-body">
                    <h5 class="card-title mb-2 ls-1 fw-bold">
                      <%= item.title %>
                    </h5>
                    <p class="card-text">
                      <%= item.description %>
                    </p>
                    <div class="d-flex justify-content-between mt-4">
                      <div class="job-details">
                        <i class="fas fa-map-marker-alt"></i>
                        <%= item.location %>
                          <i class="ms-4 fas fa-clock"></i>
                          <%= item.type %>
                      </div>
                      <a href="<%= link + '/career-focus/' +  item.id %>"
                        class="btn btn-secondary fs-6 fw-bold bg-secondary border rounded px-4 py-2">View Job</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% }); %>

        </div>
      </section>

      <%- include('partials/footer') %>

        <div id="preloader"></div>

        <!-- Vendor JS Files -->
        <script src="<%= link %>/uploads/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="<%= link %>/uploads/assets/vendor/aos/aos.js"></script>
        <script src="<%= link %>/uploads/assets/vendor/glightbox/js/glightbox.min.js"></script>
        <script src="<%= link %>/uploads/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
        <script src="<%= link %>/uploads/assets/vendor/swiper/swiper-bundle.min.js"></script>
        <script src="<%= link %>/uploads/assets/vendor/purecounter/purecounter_vanilla.js"></script>
        <script src="<%= link %>/uploads/assets/vendor/php-email-form/validate.js"></script>

        <!-- Template Main JS File -->
        <script src="<%= link %>/uploads/assets/js/main.js"></script>
  </body>

</html>